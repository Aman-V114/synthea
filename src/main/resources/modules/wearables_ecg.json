    "ECG_Baseline": {
      "type": "Procedure",
      "codes": [
        {
          "system": "SNOMED-CT",
          "code": 29303009,
          "display": "Electrocardiographic procedure"
        }
      ],
      "duration": {
        "low": 5,
        "high": 10,
        "unit": "minutes"
      },
      "direct_transition": "ECG_Sim"
    },
    "ECG_Sim": {
      "type": "Physiology",
      "model": "circulation/McSharry2003_Synthetic_ECG.xml",
      "solver": "runge_kutta",
      "step_size": 0.01,
      "sim_duration": 4,
      "lead_time": 0,
      "inputs": [
        {
          "from_exp": "#{BMI} * 0.497 + 56.15",
          "to": "hrmean"
        }
      ],
      "outputs": [
        {
          "from_list": "zf",
          "to": "ecg_result",
          "type": "Attribute"
        }
      ],
      "direct_transition": "ECG_Data",
      "alt_direct_transition": "Clear_ECG_result"
    },
    "ECG_Data": {
      "type": "Observation",
      "category": "procedure",
